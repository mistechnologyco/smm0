rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /posts/{postId} {
      // Test mode - 30 gün geçerli
      allow read, write: if request.time < timestamp.date(2026, 4, 1);
    }
    
    match /accounts/{accountId} {
      // Test mode - 30 gün geçerli
      allow read, write: if request.time < timestamp.date(2026, 4, 1);
    }
    
    match /settings/{settingId} {
      // Test mode - 30 gün geçerli
      allow read, write: if request.time < timestamp.date(2026, 4, 1);
    }
  }
}
